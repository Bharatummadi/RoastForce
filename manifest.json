{
  "manifest_version": 3,
  "name": "RoastForce",
  "version": "1.0.0",
  "description": "Sarcastic roasts when you save a Salesforce field without a description.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.visualforce.com/*",
        "https://*.lightning.com/*",
        "https://*.salesforce-setup.com/*"
      ],
      "js": [
        "scripts/roast_data.js",
        "scripts/content.js"
      ],
      "css": [
        "styles/roast.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fire_emoji.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}